{
	"name": "iris-studio",
	"version": "0.0.5",
	"description": "WYSIWYM editor for Iris documents",
	"author": "irisedu",
	"private": true,
	"type": "module",
	"build": {
		"productName": "Iris Studio",
		"appId": "cc.ucsb.iris-studio",
		"electronLanguages": [
			"en-US"
		],
		"files": [
			"!src/",
			"!public/",
			"!*.config.js",
			"!pnpm-lock.yaml",
			"!shell.nix"
		],
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			]
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"category": "public.app-category.developer-tools"
		},
		"linux": {
			"target": [
				{
					"target": "appimage",
					"arch": [
						"x64"
					]
				}
			]
		}
	},
	"main": "./out/main/index.cjs",
	"scripts": {
		"dev": "electron-vite dev --watch",
		"devtools": "react-devtools",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"postinstall": "electron-builder install-app-deps",
		"dist": "patchouli-prebuild && electron-builder",
		"dist:all": "patchouli-prebuild && electron-builder -mwl",
		"tsc": "tsc --noEmit"
	},
	"devDependencies": {
		"@codemirror/commands": "^6.10.1",
		"@codemirror/language": "^6.12.1",
		"@codemirror/language-data": "^6.5.2",
		"@codemirror/state": "^6.5.4",
		"@codemirror/view": "^6.39.12",
		"@fontsource/atkinson-hyperlegible": "^5.2.8",
		"@fontsource/source-code-pro": "^5.2.7",
		"@fontsource/vollkorn": "^5.2.10",
		"@fontsource/vollkorn-sc": "^5.2.8",
		"@handlewithcare/react-prosemirror": "^2.8.0",
		"@iconify-json/tabler": "^1.2.26",
		"@irisedu/schemas": "workspace:^",
		"@reduxjs/toolkit": "^2.11.2",
		"@svgr/core": "^8.1.0",
		"@svgr/plugin-jsx": "^8.1.0",
		"@tailwindcss/vite": "^4.1.18",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@uiw/codemirror-extensions-color": "^4.25.4",
		"@uiw/codemirror-extensions-hyper-link": "^4.25.4",
		"@uiw/codemirror-theme-github": "^4.25.4",
		"@uiw/react-codemirror": "^4.25.4",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.24",
		"chokidar": "^5.0.0",
		"electron": "39.2.7",
		"electron-builder": "^26.4.0",
		"electron-vite": "^5.0.0",
		"html-react-parser": "^5.2.15",
		"iris-components": "workspace:^",
		"iris-prosemirror": "workspace:^",
		"patchouli": "workspace:^",
		"prosemirror-inputrules": "^1.5.1",
		"prosemirror-model": "^1.25.4",
		"prosemirror-state": "^1.4.4",
		"prosemirror-view": "^1.41.5",
		"react": "^19.2.4",
		"react-arborist": "^3.4.0",
		"react-devtools": "^7.0.1",
		"react-dom": "^19.2.4",
		"react-redux": "^9.1.2",
		"react-resizable-panels": "^4.5.7",
		"redux-remember": "^5.4.0",
		"tailwindcss": "^4.1.18",
		"ts-node": "^10.9.2",
		"unplugin-icons": "^23.0.1",
		"use-resize-observer": "^9.1.0",
		"vite": "^7.3.1",
		"vite-plugin-svgr": "^4.5.0"
	}
}
