{
	"compilerOptions": {
		"declaration": true,
		"target": "es2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"baseUrl": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./out"
	},
	"include": ["src/**/*"]
}
