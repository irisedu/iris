{
	"compilerOptions": {
		"target": "es2022",
		"module": "preserve",
		"moduleResolution": "bundler",
		"baseUrl": "./",
		"jsx": "preserve",
		"types": ["vite/client", "unplugin-icons/types/react", "./src/globals"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"$assets/*": ["src/assets/*"],
			"$hooks/*": ["src/hooks/*"],
			"$components/*": ["src/components/*"],
			"$state/*": ["src/state/*"]
		}
	}
}
